rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access for all users (public products)
    match /produtos/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow read/write access for authenticated users on other collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
